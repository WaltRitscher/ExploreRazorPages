@page
@model ExploreRazorPages.Pages.AllTourStopsModel
@{
  ViewData["Title"] = "AllTourStops";
}

<h1>All Tour Stops</h1>

<table class="table table-striped table-bordered table-condensed">
  @foreach (var item in Model.TourStops)
  {
    <tr>
      <td>@item.StopNumber</td>
      <td><b>@item.Name  </b>    </td>
      <td>@item.Description      </td>
      <td>
        <a class="btn btn-outline-primary" asp-page="DatabindWithRouteParam"
           asp-route-stopnumber='@item.StopNumber'>Details...</a>
      </td>
    </tr>
  }

</table>
