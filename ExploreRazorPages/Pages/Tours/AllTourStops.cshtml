@page
@model ExploreRazorPages.Pages.AllTourStopsModel
@{
  ViewData["Title"] = "AllTourStops";
}

<h1>All Tour Stops</h1>

<table class="table table-striped table-bordered table-condensed">
  @foreach (var tourStop in Model.TourStops)
	{
    <tr>
      <td>@tourStop.StopNumber</td>
      <td><b>@tourStop.Name  </b>    </td>
      <td>@tourStop.Description      </td>
      <td>
        <a class="btn btn-outline-primary" 
					 asp-page="ShowTourStop"
           asp-route-stopnumber='@tourStop.StopNumber'>Details...</a>
      </td>
    </tr>
  }

</table>
