@page
@model ExploreRazorPages.Pages.AllTourStopsDIModel
@{
  ViewData["Title"] = "AllTourStopsDI";
}

<h1>TourStops DI - in code</h1>
<div class="card-columns">
  @foreach (var item in Model.TourStops)
  {
    <div class="card shadow" style="width:23vw">
      <img class="card-img-top" style="width:100%;height:15vw;object-fit:cover" src="@Url.Content(item.ImageUri)" alt="Card image">
      <div class="card-body">
        <h4 class="card-title" style="height:3vw">@item.Name</h4>
        <div class="card-text px-2 text-truncate">@item.Description</div>
        <a  class="btn btn-outline-primary stretched-link"  asp-page="ShowTourStopWithRouteParam"
           asp-route-stopnumber='@item.StopNumber'>See Details...</a>
      </div>
    </div>
  }
  </div>

